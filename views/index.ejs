<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.testimonio-card').forEach(card => {
    observer.observe(card);
  });

  document.querySelectorAll('.servicio-box').forEach(card => {
    observer.observe(card);
  });

  document.querySelectorAll('.animacion-scroll').forEach(el => {
    observer.observe(el);
  });

  // Forzar observación después de cargar completamente
  window.addEventListener("load", () => {
    document.querySelectorAll('.animacion-scroll').forEach(el => {
      observer.observe(el);
    });
  });
</script>

<script>
  const tipoSelect = document.getElementById('tipo-servicio');
  const individualLabel = document.getElementById('label-servicio-individual');
  const grupalLabel = document.getElementById('label-servicio-grupal');

  tipoSelect.addEventListener('change', function () {
    if (this.value === 'individuales') {
      individualLabel.style.display = 'block';
      grupalLabel.style.display = 'none';
    } else if (this.value === 'grupales') {
      grupalLabel.style.display = 'block';
      individualLabel.style.display = 'none';
    } else {
      individualLabel.style.display = 'none';
      grupalLabel.style.display = 'none';
    }
  });
</script>

