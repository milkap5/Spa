<link rel="stylesheet" href="/estilos/template_header.css" />

<header class="header">
    <div class="logo_titles">
        <img src="/media/imagenes/logo-sentirse-bien.png" alt="Logo Sentirse Bien" class="headerLogo">
        <hgroup class="headerTitles">
            <h1>Sentirse Bien</h1>
            <h2>Bienestar pensado para vos</h2>
        </hgroup>
    </div>
    <nav class="headerNav">

        <script>let usuario;</script>
        <% if(typeof usuario !== 'undefined') { %>
            <script>usuario = "<%= usuario.usuarioTipo %>";</script>

            <a href="/<%= usuario.usuarioTipo %>">Inicio</a> 
            <a href="/servicios-individuales">Servicios Individuales</a>
            <a href="/servicios-grupales">Servicios Grupales</a>
            <div id="dropdown">
                <button class="dropdown-toggle"><%= usuario.nombre %></button>
                <div class="dropdown-menu">
                    <% if(usuario.usuarioTipo === 'admin') { %>
                        <a href="/admin/administracion">Administración</a>
                    <% } else if(usuario.usuarioTipo === 'profesional') { %>
                        <a href="/profesional/pannel-turno">Panel de turnos</a>
                    <% } else { %>
                        <a href="/cliente/formulario-turno">Solicitar Turno</a>
                    <% } %>
                    <a href="/cerrar-session">Cerrar Sesión</a>
                </div>
            </div>
            <script src="./logicas/template_header.js"></script>
        <% } else { %>
            <script>usuario = "noRegistrado";</script>
            
            <a href="/">Inicio</a>
            <a href="/servicios-individuales">Servicios Individuales</a>
            <a href="/servicios-grupales">Servicios Grupales</a>
            <a href="/inicioSesion">Iniciar Sesión</a>
        <% } %>
    </nav>
</header>